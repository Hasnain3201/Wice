rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --------- HELPERS ----------
    function isSignedIn() {
      return request.auth != null;
    }

    function docHasAdminRole(userDoc) {
      return userDoc.accountType == 'admin' ||
             userDoc.role == 'admin' ||
             (userDoc.profile != null && userDoc.profile.accountType == 'admin') ||
             (userDoc.profile != null && userDoc.profile.role == 'admin');
    }

    function isAdmin() {
      return request.auth != null &&
             docHasAdminRole(
               get(/databases/$(database)/documents/users/$(request.auth.uid)).data
             );
    }

    function isUserOwner(userId) {
      return request.auth != null &&
             request.auth.uid == userId;
    }


    // -------- USERS ----------
    match /users/{userId} {
      allow read: if isSignedIn();
      allow update: if isUserOwner(userId) || isAdmin();
      allow create: if isSignedIn();
      allow delete: if isAdmin();
    }

    // -------- GRANTS ----------
    match /grants/{grantId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // -------- ADMIN LOGS ----------
    match /adminActions/{logId} {
      allow read, write: if isAdmin();
    }

    // -------- SAVED COLLECTIONS ----------
    match /savedCollections/{userId} {
      allow read: if isSignedIn() &&
                    (request.auth.uid == userId || isAdmin());
      allow write: if isSignedIn() &&
                     request.auth.uid == userId;
    }

    // -------- CHATS ----------
    match /chats/{chatId} {
      allow create: if isSignedIn();
      allow read: if isAdmin() ||
                  resource.data.participantIds.hasAny([request.auth.uid]);
      allow update, delete: if isAdmin() ||
                             resource.data.participantIds.hasAny([request.auth.uid]);

      match /messages/{messageId} {
        allow read, write: if isAdmin() ||
          get(/databases/$(database)/documents/chats/$(chatId))
            .data.participantIds.hasAny([request.auth.uid]);
      }
    }

    // -------- AVAILABILITIES ----------
    match /availabilities/{userId} {
      allow read: if true;
      allow write: if isSignedIn() &&
                   (request.auth.uid == userId || isAdmin());
    }

    // -------- BOOKINGS ----------
    match /bookings/{bookingId} {
      allow create: if isSignedIn();

      allow read: if isSignedIn() &&
        (resource.data.clientId == request.auth.uid ||
         resource.data.consultantId == request.auth.uid ||
         isAdmin());

      allow update: if isSignedIn() &&
        (
          (resource.data.consultantId == request.auth.uid &&
           (request.resource.data.status == 'confirmed' ||
            request.resource.data.status == 'declined')) ||
          (resource.data.clientId == request.auth.uid &&
           request.resource.data.status == 'cancelled') ||
          isAdmin()
        );

      allow delete: if isAdmin();
    }

    // -------- PROJECTS ----------
    match /projects/{projectId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn();
      allow delete: if isAdmin();

      match /milestones/{milestoneId} {
        allow read, create, update, delete: if isSignedIn();
      }

      match /files/{fileId} {
        allow read, create, update, delete: if isSignedIn();
      }
    }


    // ⭐⭐⭐ HELP TICKETS (FULLY LOCKED DOWN TO YOUR SPECS) ⭐⭐⭐
    match /helpTickets/{ticketId} {

      // Create allowed
      allow create: if isSignedIn();

      // Read rules
      allow read: if isAdmin() ||
                  request.auth.uid == resource.data.userId;

      // ---------- USER UPDATE RIGHTS ----------
      // User may ONLY change the "status" field (resolve / undo)
      allow update: if request.auth.uid == resource.data.userId &&
                    request.resource.data.diff(resource.data)
                      .changedKeys()
                      .hasOnly(["status"]);

      // ---------- ADMIN UPDATE RIGHTS ----------
      // Admin may NOT modify user input fields (subject, message, etc.)
      // Admin may NOT change status
      // Admin may only update system metadata fields like "hasResponse"
      allow update: if isAdmin() &&
        request.resource.data.diff(resource.data)
          .changedKeys()
          .hasOnly(["hasResponse", "updatedAt"]);

      // NO ONE can delete tickets
      allow delete: if false;


      // ---------- FILES SUBCOLLECTION ----------
      match /files/{fileId} {

        // Owner uploads files
        allow create: if request.auth.uid == resource.data.userId;

        // Owner or admin can read files
        allow read: if request.auth.uid == resource.data.userId || isAdmin();

        // Nobody deletes files
        allow delete: if false;
        allow update: if false;
      }


      // ---------- RESPONSES SUBCOLLECTION ----------
      match /responses/{responseId} {

        // Admin creates responses
        allow create: if isAdmin();

        // User or admin may read
        allow read: if isAdmin() ||
                    request.auth.uid == resource.data.userId;

        // Admin may update metadata (rare)
        allow update: if isAdmin();

        // NO deletion of responses
        allow delete: if false;
      }
    }


    // -------- DEFAULT DENY ----------
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
