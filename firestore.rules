rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function docIsPublicConsultant(docData) {
      return docData.accountType == 'consultant' &&
        docData.phaseLightCompleted == true;
    }

    function docHasAdminRole(userDoc) {
      return userDoc.accountType == 'admin' ||
        userDoc.role == 'admin' ||
        (userDoc.profile != null && userDoc.profile.accountType == 'admin') ||
        (userDoc.profile != null && userDoc.profile.role == 'admin');
    }

    function isAdmin() {
      return request.auth != null &&
        docHasAdminRole(
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data
        );
    }

    function isExistingChatParticipant() {
      return request.auth != null &&
        resource.data.participantIds.hasAny([request.auth.uid]);
    }

    function isChatParticipantById(chatId) {
      return request.auth != null &&
        get(/databases/$(database)/documents/chats/$(chatId)).data.participantIds.hasAny([request.auth.uid]);
    }

    function isCreatingChat() {
      return request.auth != null &&
        request.resource.data.participantIds.hasAny([request.auth.uid]);
    }

    function isUserOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // USERS COLLECTION
    match /users/{userId} {
      allow read: if isSignedIn() &&
        (isUserOwner(userId) ||
          isAdmin() ||
          docIsPublicConsultant(resource.data));
      allow create: if isSignedIn();
      allow update: if isUserOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }

    // GRANTS
    match /grants/{grantId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // ADMIN LOGS
    match /adminActions/{logId} {
      allow read, write: if isAdmin();
    }

    // SAVED COLLECTIONS
    match /savedCollections/{userId} {
      allow read: if isSignedIn() &&
        (request.auth.uid == userId || isAdmin());
      allow write: if isSignedIn() && request.auth.uid == userId;
    }

    // CHATS & MESSAGES
    match /chats/{chatId} {
      allow create: if isCreatingChat() || isAdmin();
      allow read: if isExistingChatParticipant() || isAdmin();
      allow update, delete: if isExistingChatParticipant() || isAdmin();

      match /messages/{messageId} {
        allow read, write: if isChatParticipantById(chatId) || isAdmin();
      }
    }

    // ⭐ NEW — AVAILABILITIES COLLECTION (THIS FIXES YOUR ISSUE)
    match /availabilities/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // DEFAULT DENY EVERYTHING ELSE
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
