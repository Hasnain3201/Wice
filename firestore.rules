rules_version = '2'; 
service cloud.firestore {
  match /databases/{database}/documents {

    // ---------- COMMON HELPERS ----------
    function isSignedIn() {
      return request.auth != null;
    }

    function docIsPublicConsultant(docData) {
      return docData.accountType == 'consultant' &&
             docData.phaseLightCompleted == true;
    }

    function docHasAdminRole(userDoc) {
      return userDoc.accountType == 'admin' ||
             userDoc.role == 'admin' ||
             (userDoc.profile != null && userDoc.profile.accountType == 'admin') ||
             (userDoc.profile != null && userDoc.profile.role == 'admin');
    }

    function isAdmin() {
      return request.auth != null &&
             docHasAdminRole(
               get(/databases/$(database)/documents/users/$(request.auth.uid)).data
             );
    }

    function isUserOwner(userId) {
      return request.auth != null &&
             request.auth.uid == userId;
    }

    function isConsultantForBooking() {
      return request.auth != null &&
             request.auth.uid == resource.data.consultantId;
    }

    function isClientForBooking() {
      return request.auth != null &&
             request.auth.uid == resource.data.clientId;
    }

    function isConsultantOrAdmin() {
      return request.auth != null && (
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.accountType == 'consultant' ||
        isAdmin()
      );
    }

    // ✅ NEW: helper to check if current user owns a help ticket
    function isHelpTicketOwner(ticketId) {
      return request.auth != null &&
             get(/databases/$(database)/documents/helpTickets/$(ticketId)).data.userId == request.auth.uid;
    }


    // USERS --------------------------------------
    match /users/{userId} {
      allow read: if isSignedIn();
      allow update: if isUserOwner(userId) || isAdmin();
      allow create: if isSignedIn();
      allow delete: if isAdmin();
    }

    // GRANTS -------------------------------------
    match /grants/{grantId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // ADMIN LOGS ---------------------------------
    match /adminActions/{logId} {
      allow read, write: if isAdmin();
    }

    // SAVED COLLECTIONS --------------------------
    match /savedCollections/{userId} {
      allow read: if isSignedIn() &&
                    (request.auth.uid == userId || isAdmin());
      allow write: if isSignedIn() &&
                     request.auth.uid == userId;
    }

    // CHATS & MESSAGES ---------------------------
    match /chats/{chatId} {
      allow create: if isSignedIn();
      allow read: if isAdmin() ||
                  (request.auth != null &&
                   resource.data.participantIds.hasAny([request.auth.uid]));
      allow update, delete: if isAdmin() ||
                            (request.auth != null &&
                             resource.data.participantIds.hasAny([request.auth.uid]));

      match /messages/{messageId} {
        allow read, write: if isAdmin() ||
                           (request.auth != null &&
                            get(/databases/$(database)/documents/chats/$(chatId))
                              .data.participantIds.hasAny([request.auth.uid]));
      }
    }

    // AVAILABILITIES -----------------------------
    match /availabilities/{userId} {
      allow read: if true;
      allow write: if isSignedIn() &&
                   (request.auth.uid == userId || isAdmin());
    }

    // BOOKINGS -----------------------------------
    match /bookings/{bookingId} {

      allow create: if isSignedIn();

      allow read: if isSignedIn() &&
        (isClientForBooking() ||
         isConsultantForBooking() ||
         isAdmin());

      allow update: if isSignedIn() &&
        (
          (isConsultantForBooking() &&
           (
             request.resource.data.status == 'confirmed' ||
             request.resource.data.status == 'declined'
           )
          ) ||
          (isClientForBooking() &&
           request.resource.data.status == 'cancelled') ||
          isAdmin()
        );

      allow delete: if isAdmin();
    }


    // PROJECTS -----------------------------------
    match /projects/{projectId} {
      
      allow read: if isSignedIn();
      allow create: if isSignedIn() && isConsultantOrAdmin();
      allow update: if isSignedIn();
      allow delete: if isAdmin();
      
      // Milestones subcollection
      match /milestones/{milestoneId} {
        allow read: if isSignedIn();
        allow create, update: if isSignedIn();
        allow delete: if isSignedIn();
      }

      // Files subcollection
      match /files/{fileId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn();
        allow update, delete: if isSignedIn();
      }
    }


    // ⭐⭐⭐ HELP TICKETS (UPDATED) ⭐⭐⭐
    match /helpTickets/{ticketId} {

      // Any signed-in user can submit a ticket
      allow create: if isSignedIn();

      // Admin reads ALL tickets; user reads ONLY their own
      allow read: if isAdmin() ||
                  (isSignedIn() && request.auth.uid == resource.data.userId);

      // USER: may update ONLY "status" (resolve / undo) on their own ticket
      allow update: if isSignedIn() &&
                    request.auth.uid == resource.data.userId &&
                    request.resource.data.diff(resource.data)
                      .changedKeys()
                      .hasOnly(["status"]);

      // ADMIN: may update ONLY system fields (not user-input fields)
      allow update: if isAdmin() &&
                    request.resource.data.diff(resource.data)
                      .changedKeys()
                      .hasOnly(["status", "updatedAt", "hasResponse"]);

      // ❌ No one can delete tickets via client (admins included)
      // (No `allow delete` here → default deny)


      // ---------- FILES under each help ticket ----------
      match /files/{fileId} {

        // Owner can upload/delete files for their own ticket
        allow create: if isHelpTicketOwner(ticketId);
        allow delete: if isHelpTicketOwner(ticketId);

        // Admin can view files; owner can view their own
        allow read: if isHelpTicketOwner(ticketId) || isAdmin();
      }


      // ---------- RESPONSES under each help ticket ----------
      match /responses/{responseId} {

        // Admin creates / edits / deletes responses
        allow create, update, delete: if isAdmin();

        // Owner can read responses for their ticket; admin can read all
        allow read: if isAdmin() ||
                    (isHelpTicketOwner(ticketId));
      }
    }


    // DEFAULT DENY --------------------------------
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
